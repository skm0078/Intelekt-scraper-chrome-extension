{
    "manifest_version": 3,
    "name": "Intelect Scraper",
    "version": "1.0",
    "description": "A Chrome extension to highlight and store DOM elements.",
    "action": {
      "default_popup": "popup.html"
    },
    "permissions": ["activeTab", "scripting", "storage", "cookies"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "./icons/icon16.png",
      "32": "./icons/icon32.png",
      "48":"./icons/icon48.png",
      "64": "./icons/icon64.png",
      "128": "./icons/icon128.png"
    }
  }
  