{
  "manifest_version": 2,
  "name": "Intelect Scraper",
  "version": "1.0",
  "description": "A Chrome extension to highlight and store DOM elements.",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "tabs", "storage", "cookies"],
  "content_scripts": [
    {
      "js": ["theroom.min.js", "utils.js", "scripts/content.js"],
      "matches": ["<all_urls>"],
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "./icons/icon16.png",
    "32": "./icons/icon32.png",
    "48": "./icons/icon48.png",
    "64": "./icons/icon64.png",
    "128": "./icons/icon128.png"
  }
}
